<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#1e90ff"
    android:padding="10dp"
    android:layout_height="match_parent">
    <TextView
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Induce Quiz"
        android:textSize="35dp"
        android:textStyle="bold|italic"
        android:textColor="#FFFFFF"
        />
    <TextView
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Learing and increase your knowledge base"
        android:textSize="10dp"
        android:textStyle="bold|italic"
        android:textColor="@color/colorPrimaryDark"
        />
    <LinearLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <EditText
            android:id="@+id/name"
            android:layout_marginTop="100dp"
            android:hint="Names"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:background="@drawable/textview"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/email"
            android:layout_marginTop="15dp"
            android:hint="Email"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:background="@drawable/textview"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/password"
            android:hint="Password"
            android:layout_marginTop="15dp"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:background="@drawable/textview"
            android:layout_height="wrap_content" />
        <CheckBox
            android:id="@+id/checkbox"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="By checking this Box You Have accepted to abide by our terms of service and privacy policies"/>
        <Button
            android:id="@+id/signUp"
            android:text="sign up"
            android:layout_marginTop="15dp"
            android:padding="20dp"
            android:background="#6B8E23"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text=" you have an account login"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
