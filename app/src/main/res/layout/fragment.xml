<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="5dp"
        android:background="@drawable/side_nav_bar"
        android:layout_height="wrap_content">
    <ImageView
        android:layout_marginTop="10dp"
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:src="@drawable/qize" />

    <TextView
android:layout_gravity="center"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textStyle="italic"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Choose Topics Of your Interest"
         />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:background="@drawable/textview"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:padding="3dp"
            android:src="@drawable/ic_launcher_background"/>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:padding="1dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">
        <TextView
            android:id="@+id/head1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mathematics"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_toRightOf="@id/img1"
            android:layout_marginLeft="5dp"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img1"
            android:layout_gravity="center"
            android:layout_below="@id/head1"
            android:text="Mathematics is the study of topics such as quantity(numbers),stuctures"
            />
        </LinearLayout>
       <CheckBox
           android:layout_width="30dp"
           android:layout_height="30dp"
           android:layout_gravity="center"
           android:id="@+id/checkbox1"

           />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:background="@drawable/textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img2"
            android:layout_gravity="center"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="3dp"
            android:src="@drawable/ic_launcher_background"/>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/head2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Biology"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_toRightOf="@id/img1"
                android:layout_marginLeft="5dp"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_toRightOf="@id/img1"
                android:layout_below="@id/head1"
                android:text="Biology Is The Study Of Plant And Animals"
                />
        </LinearLayout>
        <CheckBox

            android:layout_width="30dp"
            android:layout_gravity="center"
            android:layout_height="30dp"
            android:id="@+id/checkbox2"

            />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:background="@drawable/textview"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img3"
            android:layout_gravity="center"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="3dp"
            android:src="@drawable/ic_launcher_background"/>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/head3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="science"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_toRightOf="@id/img1"
                android:layout_marginLeft="5dp"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/img1"
                android:layout_gravity="center"
                android:layout_below="@id/head1"
                android:text="Science Is the Systematic EnterPrise That Builds and Organizes Knowledge"
                />
        </LinearLayout>
        <CheckBox

            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:id="@+id/checkbox3"

            />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:padding="5dp"
        android:background="@drawable/textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img4"
            android:layout_width="40dp"
            android:layout_gravity="center"
            android:layout_height="40dp"
            android:padding="3dp"
            android:src="@drawable/ic_launcher_background"/>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/head4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Engenering"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_toRightOf="@id/img1"
                android:layout_marginLeft="5dp"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/img1"
                android:layout_below="@id/head1"
                android:layout_gravity="center"
                android:text="Engineering is the study of topics such as quantity(numbers),stuctures"
                />
        </LinearLayout>
        <CheckBox
            android:layout_width="30dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="30dp"
            android:id="@+id/checkbox4"

            />
    </LinearLayout>
</LinearLayout>
    </ScrollView>
</LinearLayout>
